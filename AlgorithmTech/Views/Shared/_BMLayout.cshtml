<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/base.css" rel="stylesheet" />
    <link href="~/Content/common/layout.css" rel="stylesheet" />
    <link href="~/Content/common/menu.css" rel="stylesheet" />
    <link href="~/Content/common/header.css" rel="stylesheet" />
</head>
<body>
    <div id="top">
        @Html.Partial("_Header")
    </div>
    <div id="middle">
        <div id="middle_left">@Html.Partial("_Menu")</div>
        <div id="mainWrap">
            @RenderBody()
            <iframe id="iframe-main-content" style="width: 100%; height: 98%; border: none;" src="~/Tag/Index"></iframe>
        </div>
    </div>
    <div id="bottom"></div>
    <script type="text/javascript" src="~/Scripts/jquery/jquery-1.7.1.js"></script>
    <script src="~/Scripts/Common/menu.js"></script>
</body>
</html>
